[mysql-proxy]
# proxy-address = :4040
proxy-address = :{{MYSQL_PROXY_PORT}}

# proxy-backend-addresses = 127.0.0.1:3306
# TODO : is it usefull for multi node ?
proxy-backend-addresses = {{MYSQLD_HOST}}:%(MYSQLD_PORT)s

log-file={{QSERV_LOG_DIR}}/mysql-proxy.log
log-level=debug

# WARNING : this option must be overload by a cmd line option 
# when using mysql-proxy init.d startup script
pid-file = {{QSERV_PID_DIR}}/mysql-proxy.pid

lua-path={{QSERV_LUA_SHARE}}/?.lua;%(QSERV_LUA_SHARE)s/?/init.lua;%(QSERV_LUA_SHARE)s/?/?.lua
lua-cpath={{QSERV_LUA_LIB}}/?.so;%(QSERV_LUA_LIB)s/?/?.so
proxy-lua-script = {{QSERV_DIR}}/proxy/mysqlProxy.lua
