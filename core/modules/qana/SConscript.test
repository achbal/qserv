# -*- python -*-
Import('env')
Import('libProducts')
Import('defaultTgts')
Import('findLibs')
Import('cacheObjs')

import os
import itertools


programs = []
# extDeps
extDeps = "antlr boost_thread boost_system zookeeper_mt".split()

modDeps = 'css global log query'.split() # deps on other modules
deps = itertools.chain(*map(lambda m: defaultTgts[m], modDeps))
deps = map(lambda s: s, deps) # unchain
deps.sort(key=str)

localdeps = map(env.Object, 'QueryPlugin.cc QservRestrictorPlugin.cc'.split())
p = env.Program(['testPlugins.cc'] + localdeps + deps, LIBS=findLibs(extDeps))
programs.append(p)

Return('programs')
