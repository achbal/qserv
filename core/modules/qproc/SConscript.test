# -*- python -*-
Import('env')
Import('libProducts')

import os
import itertools

programs = []

# deps on other modules
modDeps = """meta merger qana query parser proto mysql util xrdc""".split() 
deps = itertools.chain(map(lambda m: libProducts[m], modDeps))
deps = map(lambda i:i, deps) # un-chain
myDeps = filter(lambda i: not str(i).startswith("test"), env.Glob("*.cc"))
extDeps = "antlr boost_regex boost_thread-mt protobuf ssl crypto XrdPosix XrdClient XrdPosixPreload XrdUtils mysqlclient_r".split()
p = env.Program(["testCppParser.cc"] + myDeps + deps, LIBS=extDeps)
programs.append(p)

Return('programs')
