# -*- python -*-
Import('env')
Import('libProducts')
Import('defaultTgts')
Import('findLibs')
Import('cacheObjs')

import os
import itertools


programs = []
# extDeps
extDeps = "boost_regex boost_signals boost_system boost_thread mysqlclient_r protobuf pthread ssl crypto".split()

modDeps = 'wlog mysql sql util wbase wconfig wcontrol wdb wsched'.split() # deps on other modules
deps = itertools.chain(*map(lambda m: defaultTgts[m], modDeps))
pDeps = itertools.chain(*map(lambda m: libProducts[m], ['proto']))
pDeps = cacheObjs(env, pDeps, ".o")
deps = map(lambda i:i, itertools.chain(deps, pDeps)) # un-chain
deps.sort(key=str)

p = env.Program(['testFifoScheduler.cc'] + deps, LIBS=findLibs(extDeps))
programs.append(p)

# add a unit test which runs on every build
utest = env.UnitTest(p)
programs.append(utest)

p = env.Program('testQueue.cc');
programs.append(p)

# add a unit test which runs on every build
utest = env.UnitTest(p)
programs.append(utest)

Return('programs')
