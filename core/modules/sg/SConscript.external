Import('env')

env = env.Clone()
headers = env.Glob('*.h')
sources = env.Glob('*.cc')
sgStatic = env.StaticLibrary('sg', sources)
sgShared = env.SharedLibrary('sg', sources)
env.Install('$prefix/lib', [sgStatic, sgShared])
env.Install('$prefix/include/sg', headers)

# By default, only build the libraries.
env.Default([sgStatic, sgShared])
