  </category>

  <!-- Configure tracer loggers. -->
  <category name="tracer" >
        <priority value ="info" />
        <appender-ref ref="tracingAppender"/>
  </category>

  <!-- Detailed tracing of AsynchQueryManager.cc -->
  <category name="tracer.control.AsynchQueryManager" >
        <priority value ="trace" />
  </category>

 </log4j:configuration>
